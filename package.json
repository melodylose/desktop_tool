{
  "name": "electron-toolkit",
  "version": "1.2.0",
  "description": "An Electron-based toolkit application for various utilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "electron-builder build --win",
    "build:win": "electron-builder build --win",
    "build:mac": "electron-builder build --mac",
    "build:linux": "electron-builder build --linux"
  },
  "build": {
    "appId": "com.nocompany.electrontoolkit",
    "productName": "Electron Toolkit App",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  },
  "author": "daniel",
  "license": "ISC",
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "bootstrap": "^5.3.3",
    "jquery": "^3.7.1",
    "jsmodbus": "^4.0.10",
    "modbus-serial": "^8.0.17",
    "mqtt": "^4.3.8",
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-mock-ipc": "^0.3.12",
    "jest": "^29.7.0"
  }
}
